// Font Stacks

$font-url--google = 'http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900'
$font-family--primary 	= 'Lato', $font-family--secondary
$font-family--secondary	= 'Helvetica Neue', Helvetica, Arial, sans-serif


// Font Weights

$font-weight = {
	thin:				100,
	light: 			300,
	medium:			400,
	bold:				700,
	ultra-bold:	900
}


// Descriptive Base Colors

$white	= white
$black 	= #0b0b0b
$grey		= #797e83

fountain-blue		= #52bab3
emerald					= #5ece7f
sunglo					= #e67478
coral						= #ff784f
purple-majesty	= #9279c3
scooter					= #39add1


// Color Usage

$color-primary		= fountain-blue
$color-secondary	= scooter
$color-accent		= emerald
$color-shadow		= rgba($black, .2)


// Color Palette Modifiers

$color-palettes = {
	grey: {
		// Stylus lighten function works differently from Sass, so you need to double the amount of Sass lightening/darkening
		// https://github.com/sass/sass/issues/598
		xx-light:	lighten($grey, 2 * 43%),
		x-light:	lighten($grey, 2 * 35%),
		light:		lighten($grey, 2 * 12%),
		base:			$grey,
		dark:			darken($grey, 2 * 8%),
		x-dark:		darken($grey, 2 * 16%)
	},
	black: {
		light:		lighten($black, 2 * 10%),
		base:			$black,
		dark:			darken($black, 2 * 10%)
	}
}


// UI Colors

$ui-colors = {
	default:	fountain-blue,
	success:	emerald,
	error:		sunglo,
	warning:	coral,
	info:			purple-majesty
}


// Text

$base__font-size	= 16px
$base__line				= 24px
$letter-space			= 1px


// Border Radius

$br--default	= .4em
$br--round		=	50%


// Transitions

$trns-duration = .3s


// Path to Assets

$path--rel = "../img"


// Grid

$g-col-width		= 65px
$g-gutter-width	= 20px
$g-col-count		= 12
$g-cont-max-w		= 1050px
$g-context = g-context($g-col-width, $g-col-count, $g-gutter-width)


// Breakpoints

$brkpoint--sm	= 1px
$brkpoint--md	= 768px
$brkpoint--lg	= 1100px