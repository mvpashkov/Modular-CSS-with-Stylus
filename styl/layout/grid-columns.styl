// ==========================================
//   Grid Columns
// ==========================================


// Generate grid columns

.grid__col
	+mq(medium)
		g-columns()


// Column styles

[class^="grid__col--"]
	+mq(small)
		margin-top: em(12px)
		margin-bottom: em(12px)
	+mq(medium)
		doubly(percentage($g-gutter-width / $g-context))
		float: left
		min-height: 1px
		padding-left: 10px
		padding-right: 10px
		&:last-of-type
			float: right


// Poly grid display

.theme__poly
	.grid [class*="grid__col"]
		font-weight: $font-weight.thin
		margin-bottom: em(16px)
		padding: 1.75%